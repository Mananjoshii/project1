<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Agent Dashboard - Sweets Shop</title>
    <link rel="stylesheet" href="/css/agent-dashboard.css" />
  </head>
  <body>
    <div class="container">
      <h1>Welcome, <%= agentName %>!</h1>
      <p>Phone: <%= agentPhone %></p>

      <h2>Available Sweets</h2>

      <div class="cards">
        <% sweets.forEach(sweet => { %>
        <div class="card">
          <h3><%= sweet.Name %></h3>
          <p>
            <strong>Price:</strong> â‚¹<%= sweet.PricePerUnit %> / <%= sweet.Unit
            %>
          </p>
          <p><strong>Your Previous Booking:</strong> <%= sweet.bookedQty %></p>

          <div class="actions">
            <label>Quantity:</label>
            <input
              type="number"
              min="0"
              value="<%= sweet.bookedQty %>"
              class="quantity-input"
              data-sweetid="<%= sweet.SweetID %>"
              required
            />
            <button class="update-btn" data-sweetid="<%= sweet.SweetID %>">
              Update
            </button>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script>
      const buttons = document.querySelectorAll(".update-btn");

      buttons.forEach((btn) => {
        btn.addEventListener("click", async () => {
          const sweetID = btn.dataset.sweetid;
          const input = document.querySelector(
            `.quantity-input[data-sweetid="${sweetID}"]`
          );
          const quantity = Number(input.value);

          const customerName = prompt(
            "Enter Customer Name:",
            "<%= agentName %>"
          );
          const customerPhone = prompt(
            "Enter Customer Phone:",
            "<%= agentPhone %>"
          );

          if (!customerName || !customerPhone)
            return alert("Name & Phone required");

          const response = await fetch("/agent/book", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              SweetID: sweetID,
              Quantity: quantity,
              CustomerName: customerName,
              CustomerPhone: customerPhone,
            }),
          });

          if (response.ok) {
            alert("Booking updated!");
          } else {
            alert("Error updating booking");
          }
        });
      });

      // Poll bookings every 5 sec
      setInterval(async () => {
        const res = await fetch("/agent/bookings-qty");
        const data = await res.json();
        data.forEach((b) => {
          const input = document.querySelector(
            `.quantity-input[data-sweetid="${b.SweetID}"]`
          );
          if (input) input.value = b.bookedQty;
        });
      }, 5000);
    </script>
  </body>
</html>
